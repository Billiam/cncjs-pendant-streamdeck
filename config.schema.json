{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://billiam.github.io/cncjs-pendant-grid/config.schema.json",
  "title": "Config",
  "description": "Grid UI and CNC configuration",
  "type": "object",
  "additionalProperties": false,
  "definitions": {
    "color": { "type": ["integer", "string"] },
    "axis": { "type": "string", "enum": ["a", "b", "c", "x", "y", "z"] },
    "sign": { "type": "string", "enum": ["+", "-"] }
  },
  "buttonSchemas": {
    "jog": {
      "required": ["action", "arguments"],
      "properties": {
        "action": {
          "enum": ["jog", "smoothJog"]
        },
        "arguments": {
          "items": [
            {
              "$ref": "#/definitions/sign"
            },
            {
              "$ref": "#/definitions/axis"
            }
          ]
        }
      }
    },
    "jogInterval": {
      "required": ["action", "arguments"],
      "properties": {
        "action": {
          "enum": ["jogSpeed", "jogDistance"],
          "arguments": {
            "items": [
              {
                "$ref": "#/definitions/sign"
              }
            ]
          }
        }
      }
    },
    "navigation": {
      "required": ["action", "arguments"],
      "properties": {
        "action": {
          "enum": ["navigate", "setScene", "swapScene"],
          "arguments": {
            "items": [
              {
                "type": "string"
              }
            ]
          }
        }
      }
    },
    "gcode": {
      "id": "gcodeType",
      "required": ["action", "arguments"],
      "properties": {
        "action": {
          "const": "gcode",
          "arguments": {
            "items": [
              {
                "type": "string"
              }
            ]
          }
        }
      }
    },
    "macro": {
      "required": ["action", "arguments"],
      "properties": {
        "action": {
          "const": "macro",
          "arguments": {
            "items": [
              {
                "type": "string"
              }
            ]
          }
        }
      }
    },
    "noArguments": {
      "required": ["action"],
      "properties": {
        "action": {
          "enum": ["backScene", "fullscreen"]
        },
        "arguments": false
      }
    },
    "info": {
      "properties": {
        "action": false,
        "arguments": false
      }
    }
  },
  "properties": {
    "cncjs": {
      "description": "CNCJS connection and port information",
      "additionalProperties": false,
      "properties": {
        "secret": {
          "type": "string"
        },
        "socketAddress": {
          "type": "string"
        },
        "socketPort": {
          "type": "integer"
        },
        "port": {
          "description": "Machine connection port",
          "type": "string"
        },
        "baudRate": {
          "type": "integer"
        },
        "controllerType": {
          "type": "string",
          "enum": ["Grbl"]
        }
      }
    },
    "ui": {
      "description": "Grid dimension configuration",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "columns": {
          "type": "integer"
        },
        "rows": {
          "type": "integer"
        },
        "bgColor": {
          "$ref": "#/definitions/color"
        },
        "textColor": {
          "$ref": "#/definitions/color"
        },
        "palette": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "machine": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "axes": {
          "description": "Array of usable axes",
          "type": "array",
          "items": {
            "$ref": "#/definitions/axis"
          }
        }
      }
    },
    "buttons": {
      "type": "object",
      "patternProperties": {
        "^.+$": {
          "description": "Description of a single button",
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "target": {
              "description": "Scene name to change to",
              "type": "string"
            },
            "action": {
              "type": "string",
              "enum": [
                "backScene",
                "fullscreen",
                "jog",
                "jogDistance",
                "jogSpeed",
                "gcode",
                "macro",
                "navigate",
                "setScene",
                "swapScene",
                "smoothJog"
              ]
            },
            "arguments": {},
            "text": {
              "type": "string"
            },
            "description": {
              "description": "Used as alt text for images if possible",
              "type": "string"
            },
            "icon": {
              "description": "Path to icon, relative to the 'app/public/icons' directory",
              "type": "string"
            },
            "bgColor": {
              "$ref": "#/definitions/color"
            }
          },
          "oneOf": [
            { "$ref": "#/buttonSchemas/jog" },
            { "$ref": "#/buttonSchemas/jogInterval" },
            { "$ref": "#/buttonSchemas/navigation" },
            { "$ref": "#/buttonSchemas/gcode" },
            { "$ref": "#/buttonSchemas/macro" },
            { "$ref": "#/buttonSchemas/noArguments" },
            { "$ref": "#/buttonSchemas/info" }
          ]
        }
      }
    },
    "scenes": {
      "type": "object",
      "description": "A named scene with a grid of buttons",
      "patternProperties": {
        "^.+$": {
          "description": "Nested array describing rows of button IDs as strings",
          "properties": {
            "buttons": {
              "type": "array",
              "items": {
                "type": "array",
                "items": {
                  "type": ["string", "null"]
                }
              }
            }
          }
        }
      }
    }
  }
}
