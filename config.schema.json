{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://billiam.github.io/cncjs-pendant-grid/config.schema.json",
  "title": "Config",
  "description": "Grid UI and CNC configuration",
  "type": "object",
  "additionalProperties": false,
  "definitions": {
    "color": { "type": ["integer", "string"] },
    "axis": { "type": "string", "enum": ["a", "b", "c", "x", "y", "z"] },
    "sign": { "type": "string", "enum": ["+", "-"] },
    "action": {
      "required": ["action"],
      "properties": {
        "action": {
          "type": "string",
          "enum": [
            "backScene",
            "fullscreen",
            "gcode",
            "input",
            "inputCommand",
            "jog",
            "jogDistance",
            "jogSpeed",
            "macro",
            "navigate",
            "setScene",
            "startSmoothJog",
            "stopSmoothJog",
            "swapScene",
            "enterWcs",
            "enterPosition"
          ]
        },
        "arguments": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "event": {
          "enum": ["down", "up", "hold"],
          "default": "down"
        }
      },
      "oneOf": [
        { "$ref": "#/actionSchemas/gcode" },
        { "$ref": "#/actionSchemas/info" },
        { "$ref": "#/actionSchemas/input" },
        { "$ref": "#/actionSchemas/inputCommand" },
        { "$ref": "#/actionSchemas/jog" },
        { "$ref": "#/actionSchemas/jogInterval" },
        { "$ref": "#/actionSchemas/macro" },
        { "$ref": "#/actionSchemas/navigation" },
        { "$ref": "#/actionSchemas/noArguments" },
        { "$ref": "#/actionSchemas/enterWcs" },
        { "$ref": "#/actionSchemas/enterPosition" }
      ]
    }
  },
  "actionSchemas": {
    "jog": {
      "required": ["action", "arguments"],
      "properties": {
        "action": {
          "enum": ["jog", "startSmoothJog", "stopSmoothJog"]
        },
        "arguments": {
          "items": [
            {
              "$ref": "#/definitions/sign"
            },
            {
              "$ref": "#/definitions/axis"
            }
          ]
        }
      }
    },
    "jogInterval": {
      "required": ["action", "arguments"],
      "properties": {
        "action": {
          "enum": ["jogSpeed", "jogDistance"],
          "arguments": {
            "items": [
              {
                "$ref": "#/definitions/sign"
              }
            ]
          }
        }
      }
    },
    "navigation": {
      "required": ["action", "arguments"],
      "properties": {
        "action": {
          "enum": ["navigate", "setScene", "swapScene"],
          "arguments": {
            "items": [
              {
                "type": "string"
              }
            ]
          }
        }
      }
    },
    "gcode": {
      "required": ["action", "arguments"],
      "properties": {
        "action": {
          "const": "gcode",
          "arguments": {
            "items": [
              {
                "type": "string"
              }
            ]
          }
        }
      }
    },
    "macro": {
      "required": ["action", "arguments"],
      "properties": {
        "action": {
          "const": "macro",
          "arguments": {
            "items": [
              {
                "type": "string"
              }
            ]
          }
        }
      }
    },
    "input": {
      "required": ["action", "arguments"],
      "properties": {
        "action": {
          "const": "input"
        },
        "arguments": {
          "items": [
            {
              "type": "string"
            }
          ]
        }
      }
    },
    "inputCommand": {
      "required": ["action", "arguments"],
      "properties": {
        "action": {
          "const": "inputCommand"
        },
        "arguments": {
          "items": [
            {
              "enum": ["backspace", "toggleSign"]
            }
          ]
        }
      }
    },
    "enterWcs": {
      "required": ["action", "arguments"],
      "properties": {
        "action": {
          "const": "enterWcs"
        },
        "arguments": {
          "items": [
            {
              "$ref": "#/definitions/axis"
            }
          ]
        }
      }
    },
    "enterPosition": {
      "required": ["action", "arguments"],
      "properties": {
        "action": {
          "const": "enterPosition"
        },
        "arguments": {
          "items": [
            {
              "$ref": "#/definitions/axis"
            }
          ]
        }
      }
    },
    "noArguments": {
      "required": ["action"],
      "properties": {
        "action": {
          "enum": ["backScene", "fullscreen"]
        },
        "arguments": false
      }
    },
    "info": {
      "properties": {
        "action": false,
        "arguments": false
      }
    }
  },
  "properties": {
    "cncjs": {
      "description": "CNCJS connection and port information",
      "additionalProperties": false,
      "properties": {
        "secret": {
          "type": "string"
        },
        "socketAddress": {
          "type": "string"
        },
        "socketPort": {
          "type": "integer"
        },
        "port": {
          "description": "Machine connection port",
          "type": "string"
        },
        "baudRate": {
          "type": "integer"
        },
        "controllerType": {
          "type": "string",
          "enum": ["Grbl"]
        }
      }
    },
    "ui": {
      "description": "Grid dimension configuration",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "columns": {
          "type": "integer"
        },
        "rows": {
          "type": "integer"
        },
        "bgColor": {
          "$ref": "#/definitions/color"
        },
        "textColor": {
          "$ref": "#/definitions/color"
        },
        "progressColor": {
          "$ref": "#/definitions/color"
        },
        "palette": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "machine": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "axes": {
          "description": "Array of usable axes",
          "type": "array",
          "items": {
            "$ref": "#/definitions/axis"
          }
        }
      }
    },
    "buttons": {
      "type": "object",
      "patternProperties": {
        "^.+$": {
          "description": "Description of a single button",
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "target": {
              "description": "Scene name to change to",
              "type": "string"
            },
            "actions": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/action"
              }
            },
            "text": {
              "type": "string"
            },
            "textSize": {
              "type": "number"
            },
            "description": {
              "description": "Used as alt text for images if possible",
              "type": "string"
            },
            "icon": {
              "description": "Path to icon, relative to the 'app/public/icons' directory",
              "type": "string"
            },
            "bgColor": {
              "$ref": "#/definitions/color"
            }
          }
        }
      }
    },
    "scenes": {
      "type": "object",
      "description": "A named scene with a grid of buttons",
      "patternProperties": {
        "^.+$": {
          "description": "Nested array describing rows of button IDs as strings",
          "properties": {
            "buttons": {
              "type": "array",
              "items": {
                "type": "array",
                "items": {
                  "type": ["string", "null"]
                }
              }
            }
          }
        }
      }
    }
  }
}
