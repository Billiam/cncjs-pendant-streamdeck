{
  "$id": "https://billiam.github.io/cncjs-pendant-grid/config.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "actionSchemas": {
    "back": {
      "properties": {
        "action": { "const": "backScene" },
        "arguments": {
          "items": [{ "pattern": "^\\d+$", "type": "string" }],
          "maxItems": 1,
          "minItems": 0,
          "type": "array"
        },
        "required": ["action"]
      }
    },
    "enterPosition": {
      "properties": {
        "action": { "const": "enterPosition" },
        "arguments": {
          "items": [
            { "$ref": "#/definitions/axis" },
            { "default": "numpad", "type": "string" }
          ],
          "maxItems": 2,
          "minItems": 1
        }
      },
      "required": ["action", "arguments"]
    },
    "enterWcs": {
      "properties": {
        "action": { "const": "enterWcs" },
        "arguments": {
          "items": [
            { "$ref": "#/definitions/axis" },
            { "default": "numpad", "type": "string" }
          ],
          "maxItems": 2,
          "minItems": 1
        }
      },
      "required": ["action", "arguments"]
    },
    "gcode": {
      "properties": {
        "action": {
          "arguments": {
            "items": [{ "type": "string" }],
            "maxItems": 1,
            "minItems": 1
          },
          "const": "gcode"
        }
      },
      "required": ["action", "arguments"]
    },
    "info": { "properties": { "action": false, "arguments": false } },
    "input": {
      "properties": {
        "action": { "const": "input" },
        "arguments": {
          "items": [{ "type": "string" }],
          "maxItems": 1,
          "minItems": 1
        }
      },
      "required": ["action", "arguments"]
    },
    "inputCommand": {
      "properties": {
        "action": { "const": "inputCommand" },
        "arguments": {
          "items": [{ "enum": ["backspace", "toggleSign"] }],
          "maxItems": 1,
          "minItems": 1
        }
      },
      "required": ["action", "arguments"]
    },
    "jog": {
      "properties": {
        "action": { "enum": ["jog", "startSmoothJog", "stopSmoothJog"] },
        "arguments": {
          "items": [
            { "$ref": "#/definitions/sign" },
            { "$ref": "#/definitions/axis" }
          ],
          "maxItems": 2,
          "minItems": 2
        }
      },
      "required": ["action", "arguments"]
    },
    "jogInterval": {
      "properties": {
        "action": {
          "arguments": {
            "items": [{ "$ref": "#/definitions/sign" }],
            "maxItems": 1,
            "minItems": 1
          },
          "enum": ["jogSpeed", "jogDistance"]
        }
      },
      "required": ["action", "arguments"]
    },
    "macro": {
      "properties": {
        "action": {
          "arguments": {
            "items": [{ "type": ["string", "null"] }],
            "maxItems": 2,
            "minItems": 1
          },
          "const": "macro"
        }
      },
      "required": ["action", "arguments"]
    },
    "navigation": {
      "properties": {
        "action": {
          "arguments": {
            "items": [{ "type": "string" }],
            "maxItems": 1,
            "minItems": 1
          },
          "enum": ["navigate", "setScene", "swapScene"]
        }
      },
      "required": ["action", "arguments"]
    },
    "noArguments": {
      "properties": {
        "action": {
          "enum": [
            "clearGcode",
            "completeInput",
            "decreaseFeedrate",
            "decreaseSpindle",
            "fullscreen",
            "hold",
            "homing",
            "increaseFeedrate",
            "increaseSpindle",
            "loadDetailFile",
            "pause",
            "refreshWatchFolder",
            "reset",
            "resetFeedrate",
            "resetSpindle",
            "run",
            "stop",
            "toggleFeedrateInterval",
            "toggleShowAbsolutePosition",
            "toggleSpindleInterval",
            "unhold",
            "unlock"
          ]
        },
        "arguments": false
      },
      "required": ["action"]
    },
    "position": {
      "properties": {
        "action": { "enum": ["goto"] },
        "arguments": {
          "items": { "pattern": "^-?(\\d*)?(\\.\\d*)?%?$", "type": "string" },
          "maxItems": 6,
          "minItems": 1
        }
      },
      "required": ["action", "arguments"]
    },
    "sort": {
      "properties": {
        "action": { "const": "sortDetails" },
        "arguments": {
          "items": {
            "enum": ["created_desc", "modified_desc", "alpha_asc", "alpha_desc"]
          },
          "maxItems": 1,
          "minItems": 1
        }
      },
      "required": ["action", "arguments"]
    },
    "rapids": {
      "properties": {
        "action": { "const": "setRapids" },
        "arguments": {
          "items": {
            "enum": ["25", "50", "100"]
          },
          "maxItems": 1,
          "minItems": 1
        }
      },
      "required": ["action", "arguments"]
    }
  },
  "additionalProperties": false,
  "definitions": {
    "action": {
      "oneOf": [
        { "$ref": "#/actionSchemas/back" },
        { "$ref": "#/actionSchemas/enterPosition" },
        { "$ref": "#/actionSchemas/enterWcs" },
        { "$ref": "#/actionSchemas/gcode" },
        { "$ref": "#/actionSchemas/info" },
        { "$ref": "#/actionSchemas/input" },
        { "$ref": "#/actionSchemas/inputCommand" },
        { "$ref": "#/actionSchemas/jog" },
        { "$ref": "#/actionSchemas/jogInterval" },
        { "$ref": "#/actionSchemas/macro" },
        { "$ref": "#/actionSchemas/navigation" },
        { "$ref": "#/actionSchemas/noArguments" },
        { "$ref": "#/actionSchemas/position" },
        { "$ref": "#/actionSchemas/sort" },
        { "$ref": "#/actionSchemas/rapids" }
      ],
      "properties": {
        "action": {
          "enum": [
            "backScene",
            "clearGcode",
            "completeInput",
            "decreaseFeedrate",
            "decreaseSpindle",
            "enterPosition",
            "enterWcs",
            "fullscreen",
            "gcode",
            "goto",
            "hold",
            "homing",
            "increaseFeedrate",
            "increaseSpindle",
            "input",
            "inputCommand",
            "jog",
            "jogDistance",
            "jogSpeed",
            "loadDetailFile",
            "loadGcode",
            "macro",
            "navigate",
            "pause",
            "refreshWatchFolder",
            "reset",
            "resetFeedrate",
            "resetSpindle",
            "run",
            "setRapids",
            "setScene",
            "sortDetails",
            "startSmoothJog",
            "stop",
            "stopSmoothJog",
            "swapScene",
            "toggleFeedrateInterval",
            "toggleShowAbsolutePosition",
            "toggleSpindleInterval",
            "unhold",
            "unlock"
          ],
          "type": "string"
        },
        "arguments": {
          "items": { "type": ["string", "null"] },
          "type": "array"
        },
        "event": { "default": "down", "enum": ["down", "up", "hold"] }
      },
      "required": ["action"]
    },
    "axis": { "enum": ["a", "b", "c", "x", "y", "z"], "type": "string" },
    "color": { "type": ["integer", "string"] },
    "sign": { "enum": ["+", "-"], "type": "string" }
  },
  "description": "Grid UI and CNC configuration",
  "properties": {
    "buttons": {
      "patternProperties": {
        "^.+$": {
          "additionalProperties": false,
          "description": "Description of a single button",
          "properties": {
            "actions": {
              "items": { "$ref": "#/definitions/action" },
              "type": "array"
            },
            "animated": { "default": false, "type": "boolean" },
            "bgColor": { "$ref": "#/definitions/color" },
            "columns": { "default": 1, "type": "integer" },
            "description": {
              "description": "Used as alt text for images if possible",
              "type": "string"
            },
            "disabled": { "type": "string" },
            "icon": {
              "description": "Path to icon, relative to the 'app/public/icons' directory",
              "type": "string"
            },
            "if": { "type": "string" },
            "rows": { "default": 1, "type": "integer" },
            "target": {
              "description": "Scene name to change to",
              "type": "string"
            },
            "text": { "type": "string" },
            "textAlignment": {
              "enum": [
                "bottom center",
                "bottom left",
                "bottom right",
                "center",
                "left",
                "right",
                "top center",
                "top left",
                "top right"
              ],
              "type": "string"
            },
            "textSize": { "type": "number" },
            "type": { "enum": ["gcodePreview"], "type": "string" }
          },
          "type": "object"
        }
      },
      "type": "object"
    },
    "cncjs": {
      "additionalProperties": false,
      "description": "CNCJS connection and port information",
      "properties": {
        "baudRate": { "type": "integer" },
        "controllerType": { "enum": ["Grbl"], "type": "string" },
        "port": { "description": "Machine connection port", "type": "string" },
        "secret": { "type": "string" },
        "socketAddress": { "type": "string" },
        "socketPort": { "type": "integer" }
      }
    },
    "machine": {
      "additionalProperties": false,
      "properties": {
        "axes": {
          "description": "Array of usable axes",
          "items": { "$ref": "#/definitions/axis" },
          "type": "array"
        }
      },
      "type": "object"
    },
    "scenes": {
      "description": "A named scene with a grid of buttons",
      "patternProperties": {
        "^.+$": {
          "description": "Nested array describing rows of button IDs as strings",
          "properties": {
            "buttons": {
              "items": {
                "items": {
                  "type": [
                    "string",
                    "null",
                    { "items": { "type": "string" }, "type": "array" }
                  ]
                },
                "type": "array"
              },
              "type": "array"
            }
          }
        }
      },
      "type": "object"
    },
    "ui": {
      "additionalProperties": false,
      "description": "Grid dimension configuration",
      "properties": {
        "bgColor": { "$ref": "#/definitions/color" },
        "columns": { "type": "integer" },
        "palette": { "items": { "type": "string" }, "type": "array" },
        "progressColor": { "$ref": "#/definitions/color" },
        "rows": { "type": "integer" },
        "textColor": { "$ref": "#/definitions/color" },
        "textShadow": { "type": "boolean" }
      },
      "type": "object"
    }
  },
  "title": "Config",
  "type": "object"
}
