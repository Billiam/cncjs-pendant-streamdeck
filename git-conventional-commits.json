{
  "convention": {
    "commitTypes": [
      "feat",
      "fix",
      "perf",
      "refactor",
      "style",
      "test",
      "build",
      "ops",
      "docs",
      "chore",
      "merge",
      "revert"
    ],
    "commitScopes": [],
    "releaseTagGlobPattern": "[0-9]*.[0-9]*.[0-9]*",
    "issueRegexPattern": "(?<=(^|\\s)#)\\d+(?=\\s|$)"
  },

  "changelog": {
    "commitTypes": ["docs", "feat", "fix", "perf"],
    "includeInvalidCommits": false,
    "commitIgnoreRegexPattern": "^WIP ",
    "headlines": {
      "feat": "\uD83D\uDE80 Added",
      "fix": "\uD83E\uDE79 Fixes",
      "docs": "\uD83D\uDCD6 Documentation",
      "perf": "\uD83D\uDD25 Performance Improvements",
      "breakingChange": "⚠️ BREAKING CHANGES"
    },

    "commitUrl": "https://github.com/billiam/cncjs-pendant-streamdeck/commit/%commit%",
    "commitRangeUrl": "https://github.com/billiam/cncjs-pendant-streamdeck/compare/%from%...%to%?diff=split",
    "issueUrl": "https://github.com/billiam/cncjs-pendant-streamdeck/issues/%issue%",
    "issueName": "#%id%"
  }
}
